{
  "boot-source": {
    "kernel_image_path": "/var/lib/voltrun/vmlinux.bin",
    "boot_args": "console=ttyS0 reboot=k panic=1 pci=off"
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "/var/lib/voltrun/rootfs.ext4",
      "is_root_device": true,
      "is_read_only": false
    }
  ],
  "machine-config": {
    "vcpu_count": 1,
    "mem_size_mib": 128,
    "ht_enabled": false
  },
  "network-interfaces": [
    {
      "iface_id": "eth0",
      "guest_mac": "AA:FC:00:00:00:01",
      "host_dev_name": "tap0"
    }
  ],
  "logger": {
    "log_path": "/var/log/voltrun/firecracker.log",
    "level": "Info",
    "show_level": true,
    "show_log_origin": true
  },
  "metrics": {
    "metrics_path": "/var/log/voltrun/firecracker-metrics.log"
  }
}
